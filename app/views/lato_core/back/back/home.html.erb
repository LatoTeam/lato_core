<% # Impostazione view custom settata da file di configurazione %>
<% if(login_root = core_getApplicationLoginRoot and login_root) %>
  <% controller.redirect_to login_root %>
<% end %>

<% block = view(:block).new() %>

<div class="content-row">
  <%=raw block.open %>

    <h1><%= CORE_LANG['vocabolary']['dashboard'] %></h1>
    <p><%= @message %></p>

  <%=raw block.close %>
</div>
