<% block = view(:block).new(width: 'large-4', custom_class: 'flying-block') %>

  <div class="main-content login">
    <% # Stampa i flash ricevuti dai controller %>
    <%= render 'lato_view/layout/flash' %>

    <ul class="bg-bubbles">
      <li></li>
      <li></li>
