<div class="main-content login">

  <!-- Login flash messages -->
  <%= render 'lato_view/layout/flash' %>

  <ul class="bg-bubbles">
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
    <li></li>
